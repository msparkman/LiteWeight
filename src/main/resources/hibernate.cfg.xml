<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">liteweight</property>
        <property name="hibernate.connection.password">liteweight123</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/liteweight</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <property name="connection_pool_size">1</property>

        <property name="hbm2ddl.auto">update</property>

        <property name="show_sql">true</property>

        <!-- List of XML mapping files -->
        <mapping class="sparkman.entity.GymSession"/>
        <mapping class="sparkman.entity.Routine"/>
        <mapping class="sparkman.entity.Set"/>
        <mapping class="sparkman.entity.User"/>

    </session-factory>
</hibernate-configuration>